{
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "root/*": [
        "./*"
      ],
      "@/*": [
        "./src/*"
      ],
      "common/*": [
        "./src/common/*"
      ],
      "app/*": [
        "./src/app/*"
      ],
      "auth/*": [
        "./src/auth/*"
      ],
      "chat/*": [
        "./src/chat/*"
      ],
      "settings/*": [
        "./src/settings/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
